@using SharedBook.Data.Models.Enums
@model SharedBook.Services.Books.BookServiceModel
@{
    Layout = "_Layout";
}
<div class="row">
    <form asp-controller="Books" asp-action="Update" method="post" class="" role="form">
        <h3 class="">Update book</h3>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Author" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Author" class="form-control" placeholder="Enter book author" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        >
        <div class="form-group">
            <label asp-for="Genre">Select genre</label>
            <select asp-for="Genre" class="form-control" asp-items="Html.GetEnumSelectList<Genre>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Genre" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Description" class="form-control" placeholder="Enter book description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Book cover image URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="https://...">
            <span asp-validation-for="ImageUrl" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-6">
                <input class="btn" type="submit" value="Return" asp-controller="Book" asp-action="All" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>