@model IEnumerable<BookServiceModel>

@{
    ViewBag.Title = "Books Administration";
}

<h1>All Books</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Gender</th>
            <th scope="col">Location</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td scope="col">@book.Id</td>
                <td scope="col">@book.Title</td>
                <td scope="col">@book.Author</td>
                @*<td scope="col">@book.Genre.ToString()</td>
                <td scope="col">@book.Location</td>*@
                <td scope="col">@(book.Status.ToString())</td>
                <td scope="col">
                    @*<a asp-area="" asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a asp-area="" asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="" asp-controller="Books" asp-action="" asp-route-id="@book.Id" asp-route-information="" class="btn btn-primary float-right ml-3">View</a>
                    <a asp-area="" asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" asp-route-information="@book.GetInformation()" class="btn btn-primary float-right ml-3">View</a>*@
                </td>
            </tr>

        }
    </tbody>
</table>
