@model BecomeBorrowerFormModel

@{
    ViewBag.Title = "Become Borrower";
}

<div class="row">
    <div class="offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 col-sm-12">
        <h2 class="heading-margin">@ViewBag.Title</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Deposit">Deposit amount:</label>
                <input asp-for="Deposit" class="form-control">
                <span asp-validation-for="Deposit" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>
    </div>
</div>