@model IEnumerable<AllBooksViewModel>

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var books = !Model.Any() ? null : Model.Count() >= 5 ? Model.Take(5).ToArray() : Model.Take(Model.Count()).ToArray();

}

<div class="jumbotron" style="background-image: url(http://www.inquiriesjournal.com/imgs/640x320/crop/article-images/uid-5710-1610128097/08c5c6.jpg); background-size: cover;">
    <div class="jumbotron">
        <h1 class="display-4">Share your bookshelf!</h1>
        <p class="lead">Borrow shared books, online and free! </p>
        <hr class="my-4">
        @if (!Model.Any())
        {
            <p class="lead">Our library is still empty! Join us and share your books!</p>
        }
        <p>Join now!</p>
        @{
            //<a asp-controller="User" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add book</a>
        }
        <a asp-controller="Books" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add book</a>
    </div>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner tagline">
        @if (books != null)
        {
            foreach (var book in books)
            {
                <div class="carousel-item active">
                    <img src="@book.ImageUrl" class="d-block w-100" alt="@book.Title - @book.Author">
                </div>
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-light" asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">@book.Title</a></h5>
                    <p>@book.Author</p>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>