@model IEnumerable<BookServiceModel>
@{
    ViewBag.Title = "Welcome!";
}
@{
    var books = !Model.Any() ? null : Model.Count() >= 5 ? Model.Take(5).ToArray() : Model.Take(Model.Count()).ToArray();
}

<div class="jumbotron" style="background-image: url(http://www.inquiriesjournal.com/imgs/640x320/crop/article-images/uid-5710-1610128097/08c5c6.jpg); background-size: cover;">
    <div class="jumbotron col-md-6">
        <h1 class="display-4">Share your books!</h1>
        <p class="lead">Borrow shared books, online and free! </p>
        <hr class="my-4">
        @if (!Model.Any())
        {
            <p class="lead">Our library is still empty! Join us and share your books!</p>
        }
        <p>Join now!</p>
        <a asp-controller="Users" asp-action="Register" class="btn btn-primary btn-lg" role="button">Join!</a>
    </div>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

        @if (books != null)
        {
            <partial name="_BookPartial" model="@Model"/>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
